<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_bgregis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="810dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg_regis"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtselamatdatang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firacode_bold"
        android:text="Daftar"
        android:textColor="@color/birutua"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_bgregis"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/txtmasukuntukmelanjutkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firacode_medium"
        android:text="Buat akun untuk memulai sekarang"
        android:textColor="@color/birutua"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtselamatdatang"
        app:layout_constraintStart_toStartOf="@+id/txtselamatdatang"
        app:layout_constraintTop_toBottomOf="@+id/txtselamatdatang"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutisinama"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="35dp"
        android:textColorHint="@color/birutua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtmasukuntukmelanjutkan"
        app:layout_constraintStart_toStartOf="@+id/txtmasukuntukmelanjutkan"
        app:layout_constraintTop_toBottomOf="@+id/txtmasukuntukmelanjutkan"
        app:layout_constraintVertical_bias="0.00999999">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firacode_regular"
            android:hint="Nama"
            android:inputType="text"
            android:textColor="@color/birutua"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutpassword"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="35dp"
        android:textColorHint="@color/birutua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/layoutisinama"
        app:layout_constraintStart_toStartOf="@+id/layoutisinama"
        app:layout_constraintTop_toBottomOf="@+id/layoutisinama"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firacode_regular"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:textColor="@color/birutua"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutconfirmpassword"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="35dp"
        android:textColorHint="@color/birutua"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/layoutpassword"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/layoutpassword"
        app:layout_constraintTop_toBottomOf="@+id/layoutpassword"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/firacode_regular"
            android:hint="Konfirmasi Kata Sandi "
            android:inputType="textPassword"
            android:textColor="@color/birutua"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/btn_register"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginTop="66dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/layoutconfirmpassword"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/layoutconfirmpassword"
        app:layout_constraintTop_toBottomOf="@+id/layoutconfirmpassword"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/kotak_daftar" />

    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firacode_semibold"
        android:text="Daftar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btn_register"
        app:layout_constraintEnd_toEndOf="@+id/btn_register"
        app:layout_constraintStart_toStartOf="@+id/btn_register"
        app:layout_constraintTop_toTopOf="@+id/btn_register" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_register"
        app:layout_constraintStart_toStartOf="@+id/btn_register"
        app:layout_constraintTop_toBottomOf="@+id/btn_register"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/txt_memilikiakun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Punya akun?"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintStart_toStartOf="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Masuk"
            android:textColor="@color/biruneon"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/btn_login"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>